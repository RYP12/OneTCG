{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="es" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}One Piece TCG{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>üè¥‚Äç‚ò†Ô∏è</text></svg>">

    {# Fuentes #}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@500;700&family=Roboto:wght@400;500&display=swap" rel="stylesheet">

    {# Bootstrap CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        :root {
            --op-gold: #f1c40f;
            --op-red: #e74c3c;
        }
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #121212;
            color: #e0e0e0;
        }
        h1, h2, h3, h4, .navbar-brand, .btn {
            font-family: 'Rajdhani', sans-serif;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        /* Navbar con efecto cristal */
        .navbar-glass {
            background: rgba(20, 20, 20, 0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        /* Dropdown personalizado */
        .dropdown-menu-dark {
            background-color: #1e1e1e;
            border: 1px solid rgba(255,255,255,0.1);
        }
        .dropdown-item:hover {
            background-color: var(--op-gold);
            color: #000 !important;
        }
        /* Estilo especial para cabeceras de admin */
        .admin-header {
            font-size: 0.75rem;
            letter-spacing: 1px;
            text-transform: uppercase;
        }
    </style>
    {% block stylesheets %}{% endblock %}
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark navbar-glass sticky-top mb-0">
    <div class="container">
        <a class="navbar-brand fw-bold text-warning" href="{{ path('app_home') }}">
            ‚ò†Ô∏è One Piece TCG
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menuPrincipal">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="menuPrincipal">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item"><a class="nav-link active" href="{{ path('app_home') }}">Cartas</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Ranking</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Estad√≠sticas Globales</a></li>
            </ul>

            <div class="d-flex align-items-center gap-2">

                {% if app.user %}
                    {# --- ESTADO: LOGUEADO --- #}

                    <div class="dropdown">
                        <a class="btn btn-outline-warning dropdown-toggle border-0" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            {# A√±adimos un icono diferente si es Admin para que se note #}
                            {% if is_granted('ROLE_ADMIN') %}üë®‚Äçüíª{% else %}üßë‚Äç‚úàÔ∏è{% endif %}
                            {{ app.user.userIdentifier }}
                        </a>

                        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark">
                            <li><h6 class="dropdown-header text-secondary">Mi Cuenta</h6></li>
                            <li><a class="dropdown-item" href="#">Mis Rankings</a></li>

                            {# --- SECCI√ìN EXCLUSIVA ADMIN --- #}
                            {% if is_granted('ROLE_ADMIN') %}
                                <li><hr class="dropdown-divider border-secondary"></li>
                                <li><h6 class="dropdown-header text-warning admin-header">Panel Admin</h6></li>

                                {# Nota: Dejo href="#" porque a√∫n no tenemos estas rutas creadas #}
                                <li><a class="dropdown-item" href="#">üë• Gesti√≥n de Usuarios</a></li>
                                <li><a class="dropdown-item" href="#">üèÜ Gesti√≥n de Rankings</a></li>
                                <li><a class="dropdown-item" href="#">üì• Cargar Cartas (API)</a></li>
                            {% endif %}
                            {# ------------------------------- #}

                            <li><hr class="dropdown-divider border-secondary"></li>
                            <li>
                                <a class="dropdown-item text-danger fw-bold" href="{{ path('app_logout') }}">
                                    Cerrar Sesi√≥n
                                </a>
                            </li>
                        </ul>
                    </div>

                {% else %}
                    {# --- ESTADO: INVITADO (NO LOGUEADO) --- #}
                    <a href="{{ path('app_login') }}" class="btn btn-outline-light btn-sm px-3">Entrar</a>
                    <a href="{{ path('app_register') }}" class="btn btn-warning btn-sm text-dark fw-bold px-3">Unirse</a>
                {% endif %}

            </div>
        </div>
    </div>
</nav>

{% block body %}{% endblock %}

<footer class="text-center text-secondary py-5 mt-5 border-top border-secondary">
    <small>Hecho con Symfony & Bootstrap | Fan Site no oficial</small>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
