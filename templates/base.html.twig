{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="es" data-bs-theme="dark"> {# ACTIVAMOS MODO OSCURO NATIVO #}
<head>
    <meta charset="UTF-8">
    <title>{% block title %}One Piece TCG{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>üè¥‚Äç‚ò†Ô∏è</text></svg>">

    {# Fuente: 'Rajdhani' es muy usada en interfaces futuristas/gaming #}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@500;700&family=Roboto:wght@400;500&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        :root {
            --op-gold: #f1c40f;
            --op-red: #e74c3c;
        }
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #121212; /* Fondo casi negro */
            color: #e0e0e0;
        }
        h1, h2, h3, h4, .navbar-brand, .btn {
            font-family: 'Rajdhani', sans-serif;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* Navbar con efecto cristal */
        .navbar-glass {
            background: rgba(20, 20, 20, 0.9);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        /* Efecto Hover para Cartas */
        .tcg-card {
            transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275), box-shadow 0.3s ease;
            border: none;
            background: #1e1e1e;
        }
        .tcg-card:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: 0 15px 30px rgba(0,0,0,0.5);
            z-index: 10;
        }

        /* Badges personalizados */
        .badge-stat {
            font-size: 0.9rem;
            padding: 0.5em 0.8em;
        }
    </style>
    {% block stylesheets %}{% endblock %}
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark navbar-glass sticky-top mb-0">
    <div class="container">
        <a class="navbar-brand fw-bold text-warning" href="{{ path('app_home') }}">
            ‚ò†Ô∏è One Piece TCG
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menuPrincipal">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="menuPrincipal">
            <ul class="navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link active" href="{{ path('app_home') }}">Cartas</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Raking</a></li>
            </ul>
            <a href="#" class="btn btn-outline-warning btn-sm px-4">Login</a>
        </div>
    </div>
</nav>

{% block body %}{% endblock %}

<footer class="text-center text-secondary py-5 mt-5 border-top border-secondary">
    <small>Hecho con Symfony & Bootstrap | Fan Site no oficial</small>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
